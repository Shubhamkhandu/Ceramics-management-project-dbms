<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/c1">

                <TextView
                    android:id="@+id/sh1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sandf1"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"/>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/c2">

                <TextView
                    android:id="@+id/sh2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sandf2"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"/>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/c3">

                <TextView
                    android:id="@+id/sh3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sandf3"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"/>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/c4">

                <TextView
                    android:id="@+id/sh4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sandf4"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"/>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/c5">

                <TextView
                    android:id="@+id/sh5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sandf5"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"/>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/c6">

                <TextView
                    android:id="@+id/sh6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sandf6"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"/>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/c7">

                <TextView
                    android:id="@+id/sh7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sandf7"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"/>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/c8">

                <TextView
                    android:id="@+id/sh8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sandf8"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"/>


            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>